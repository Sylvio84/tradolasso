<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Servir les fichiers statiques directement (JS, CSS, images, etc.)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Toutes les autres requÃªtes vers index.html (SPA routing)
  RewriteRule ^ index.html [QSA,L]
</IfModule>
